{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gopen Schema",
  "definitions": {
    "byteUnit": {
      "type": "string",
      "pattern": "^\\d+(B|KB|MB|GB|TB|PB|EB|ZB|YB)$"
    },
    "duration": {
      "type": "string",
      "pattern": "^[0-9]+(\\.[0-9]*)?[nsÂµumh]$"
    },
    "path": {
      "type": "string",
      "pattern": "^/([^/\\s]*)+(/[^/\\s]+)*$"
    },
    "http-method": {
      "type": "string",
      "enum": [
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "GET"
      ]
    },
    "response-encode": {
      "type": "string",
      "enum": [
        "JSON",
        "XML",
        "TEXT"
      ]
    },
    "store": {
      "type": "object",
      "properties": {
        "redis": {
          "type": "object",
          "properties": {
            "address": {
              "type": "string",
              "format": "uri"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "address",
            "password"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "redis"
      ],
      "additionalProperties": false
    },
    "cache": {
      "type": "object",
      "properties": {
        "duration": {
          "$ref": "#/definitions/duration"
        },
        "strategy-headers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allow-cache-control": {
          "type": "boolean"
        }
      },
      "required": [
        "duration"
      ],
      "additionalProperties": false
    },
    "limiter": {
      "type": "object",
      "properties": {
        "max-header-size": {
          "$ref": "#/definitions/byteUnit"
        },
        "max-body-size": {
          "$ref": "#/definitions/byteUnit"
        },
        "max-multipart-memory-size": {
          "$ref": "#/definitions/byteUnit"
        },
        "rate": {
          "type": "object",
          "properties": {
            "capacity": {
              "type": "number",
              "minimum": 1
            },
            "every": {
              "$ref": "#/definitions/duration"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "security-cors": {
      "type": "object",
      "properties": {
        "allow-origins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allow-methods": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "*",
              "POST",
              "PUT",
              "PATCH",
              "DELETE",
              "GET"
            ]
          }
        },
        "allow-headers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "endpoint": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "path": {
          "$ref": "#/definitions/path"
        },
        "cache": {
          "$ref": "#/definitions/cache"
        },
        "method": {
          "$ref": "#/definitions/http-method"
        },
        "response-encode": {
          "$ref": "#/definitions/response-encode"
        },
        "beforeware": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "backends": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/backend"
          }
        }
      },
      "required": [
        "path",
        "method",
        "backends"
      ],
      "additionalProperties": false
    },
    "backend": {
      "type": "object",
      "properties": {
        "hosts": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "path": {
          "$ref": "#/definitions/path"
        },
        "method": {
          "$ref": "#/definitions/http-method"
        },
        "forward-headers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "forward-queries": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "modifiers": {
          "$ref": "#/definitions/backend-modifiers"
        },
        "extra-config": {
          "$ref": "#/definitions/backend-extra-config"
        }
      },
      "required": [
        "hosts",
        "path",
        "method"
      ],
      "additionalProperties": false
    },
    "backend-modifiers": {
      "type": "object",
      "properties": {
        "statusCode": {
          "$ref": "#/definitions/status-code-modifier"
        },
        "header": {
          "$ref": "#/definitions/header-modifier-array"
        },
        "params": {
          "$ref": "#/definitions/params-modifier-array"
        },
        "query": {
          "$ref": "#/definitions/query-modifier-array"
        },
        "body": {
          "$ref": "#/definitions/body-modifier-array"
        }
      },
      "additionalProperties": false
    },
    "backend-extra-config": {
      "type": "object",
      "properties": {
        "group-response": {
          "type": "string"
        },
        "omit-response": {
          "type": "boolean"
        },
        "omit-request-body": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "status-code-modifier": {
      "type": "object",
      "properties": {
        "global": {
          "type": "boolean"
        },
        "value": {
          "type": "string",
          "pattern": "^[1-5][0-9]{2}$"
        }
      },
      "required": [
        "value"
      ],
      "additionalProperties": false
    },
    "header-modifier": {
      "type": "object",
      "properties": {
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "scope": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "global": {
          "type": "boolean"
        },
        "action": {
          "type": "string",
          "enum": [
            "SET",
            "ADD",
            "DEL",
            "RENAME"
          ]
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "context",
        "action",
        "key",
        "value"
      ],
      "additionalProperties": false
    },
    "header-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/header-modifier"
      }
    },
    "params-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/params-modifier"
      }
    },
    "params-modifier": {
      "type": "object",
      "properties": {
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "global": {
          "type": "boolean"
        },
        "action": {
          "type": "string",
          "enum": [
            "SET",
            "DEL",
            "RENAME"
          ]
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "context",
        "action",
        "key",
        "value"
      ],
      "additionalProperties": false
    },
    "query-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/query-modifier"
      }
    },
    "query-modifier": {
      "type": "object",
      "properties": {
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "global": {
          "type": "boolean"
        },
        "action": {
          "type": "string",
          "enum": [
            "ADD",
            "SET",
            "DEL",
            "RENAME"
          ]
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "context",
        "action",
        "key",
        "value"
      ],
      "additionalProperties": false
    },
    "body-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/body-modifier"
      }
    },
    "body-modifier": {
      "type": "object",
      "properties": {
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "scope": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "global": {
          "type": "boolean"
        },
        "action": {
          "type": "string",
          "enum": [
            "ADD",
            "SET",
            "DEL",
            "REPLACE",
            "RENAME"
          ]
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "context",
        "action",
        "key",
        "value"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": [
        "https://raw.githubusercontent.com/GabrielHCataldo/gopen-gateway/main/json-schema.json"
      ]
    },
    "version": {
      "type": "string"
    },
    "port": {
      "type": "number",
      "minimum": 1
    },
    "hot-reload": {
      "type": "boolean"
    },
    "timeout": {
      "type": "string"
    },
    "store": {
      "$ref": "#/definitions/store"
    },
    "cache": {
      "$ref": "#/definitions/cache"
    },
    "limiter": {
      "$ref": "#/definitions/limiter"
    },
    "security-cors": {
      "$ref": "#/definitions/security-cors"
    },
    "middlewares": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/backend"
      }
    },
    "endpoints": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/endpoint"
      }
    }
  },
  "required": [
    "port",
    "endpoints"
  ],
  "additionalProperties": false
}