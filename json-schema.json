{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gopen Schema",
  "definitions": {
    "byte-unit": {
      "type": "string",
      "pattern": "^\\d+(B|KB|MB|GB|TB|PB|EB|ZB|YB)$"
    },
    "duration": {
      "type": "string",
      "pattern": "^[0-9]+(\\.[0-9]*)?[nsÂµumh]$"
    },
    "path": {
      "type": "string",
      "pattern": "^/([^/\\s]*)+(/[^/\\s]+)*$"
    },
    "http-method": {
      "type": "string",
      "enum": [
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "GET"
      ]
    },
    "response-encode": {
      "type": "string",
      "enum": [
        "JSON",
        "XML",
        "TEXT"
      ]
    },
    "store": {
      "type": "object",
      "properties": {
        "redis": {
          "type": "object",
          "properties": {
            "address": {
              "type": "string",
              "format": "uri"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "address"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "redis"
      ],
      "additionalProperties": false
    },
    "cache": {
      "type": "object",
      "properties": {
        "duration": {
          "$ref": "#/definitions/duration"
        },
        "strategy-headers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "only-if-status-codes": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 100,
            "maximum": 599
          }
        },
        "only-if-methods": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "POST",
              "PUT",
              "PATCH",
              "DELETE",
              "GET"
            ]
          }
        },
        "allow-cache-control": {
          "type": "boolean"
        }
      },
      "required": [
        "duration"
      ],
      "additionalProperties": false
    },
    "endpoint-cache": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "ignore-query": {
          "type": "boolean"
        },
        "duration": {
          "$ref": "#/definitions/duration"
        },
        "strategy-headers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "only-if-status-codes": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 100,
            "maximum": 599
          }
        },
        "allow-cache-control": {
          "type": "boolean"
        }
      },
      "required": [
        "enabled"
      ],
      "additionalProperties": false
    },
    "limiter": {
      "type": "object",
      "properties": {
        "max-header-size": {
          "$ref": "#/definitions/byte-unit"
        },
        "max-body-size": {
          "$ref": "#/definitions/byte-unit"
        },
        "max-multipart-memory-size": {
          "$ref": "#/definitions/byte-unit"
        },
        "rate": {
          "type": "object",
          "properties": {
            "capacity": {
              "type": "number",
              "minimum": 1
            },
            "every": {
              "$ref": "#/definitions/duration"
            }
          },
          "required": [
            "capacity"
          ]
        }
      },
      "additionalProperties": false
    },
    "security-cors": {
      "type": "object",
      "properties": {
        "allow-origins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allow-methods": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "POST",
              "PUT",
              "PATCH",
              "DELETE",
              "GET"
            ]
          }
        },
        "allow-headers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "endpoint": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "path": {
          "$ref": "#/definitions/path"
        },
        "method": {
          "$ref": "#/definitions/http-method"
        },
        "timeout": {
          "$ref": "#/definitions/duration"
        },
        "cache": {
          "$ref": "#/definitions/endpoint-cache"
        },
        "limiter": {
          "$ref": "#/definitions/limiter"
        },
        "aggregate-responses": {
          "type": "boolean"
        },
        "abort-if-status-codes": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 100,
            "maximum": 599
          }
        },
        "response-encode": {
          "$ref": "#/definitions/response-encode"
        },
        "beforeware": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "backends": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/backend"
          }
        }
      },
      "required": [
        "path",
        "method",
        "backends"
      ],
      "additionalProperties": false
    },
    "backend": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z_0-9- ]*$"
        },
        "hosts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "path": {
          "$ref": "#/definitions/path"
        },
        "method": {
          "$ref": "#/definitions/http-method"
        },
        "forward-headers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "forward-queries": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "modifiers": {
          "$ref": "#/definitions/backend-modifiers"
        },
        "extra-config": {
          "$ref": "#/definitions/backend-extra-config"
        }
      },
      "required": [
        "hosts",
        "path",
        "method"
      ],
      "additionalProperties": false
    },
    "backend-modifiers": {
      "type": "object",
      "properties": {
        "status-code": {
          "type": "integer",
          "minimum": 100,
          "maximum": 599
        },
        "header": {
          "$ref": "#/definitions/header-modifier-array"
        },
        "param": {
          "$ref": "#/definitions/param-modifier-array"
        },
        "query": {
          "$ref": "#/definitions/query-modifier-array"
        },
        "body": {
          "$ref": "#/definitions/body-modifier-array"
        }
      },
      "additionalProperties": false
    },
    "backend-extra-config": {
      "type": "object",
      "properties": {
        "omit-request-body": {
          "type": "boolean"
        },
        "group-response": {
          "type": "boolean"
        },
        "omit-response": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "header-modifier": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "scope": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "action": {
          "type": "string",
          "enum": [
            "ADD",
            "APD",
            "SET",
            "RPL",
            "REN",
            "DEL"
          ]
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "propagate": {
          "type": "boolean"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "action": {
                "const": "DEL"
              }
            }
          },
          "then": {
            "required": [
              "context",
              "action",
              "key"
            ]
          },
          "else": {
            "required": [
              "context",
              "action",
              "key",
              "value"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "scope": {
                "const": "REQUEST"
              }
            }
          },
          "else": {
            "not": {
              "required": [
                "propagate"
              ]
            }
          }
        }
      ]
    },
    "header-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/header-modifier"
      }
    },
    "param-modifier": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "action": {
          "type": "string",
          "enum": [
            "SET",
            "RPL",
            "REN",
            "DEL"
          ]
        },
        "propagate": {
          "type": "boolean"
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "if": {
        "properties": {
          "action": {
            "const": "DEL"
          }
        }
      },
      "then": {
        "required": [
          "context",
          "action",
          "key"
        ]
      },
      "else": {
        "required": [
          "context",
          "action",
          "key",
          "value"
        ]
      },
      "additionalProperties": false
    },
    "param-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/param-modifier"
      }
    },
    "query-modifier": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "action": {
          "type": "string",
          "enum": [
            "ADD",
            "APD",
            "SET",
            "RPL",
            "REN",
            "DEL"
          ]
        },
        "propagate": {
          "type": "boolean"
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "if": {
        "properties": {
          "action": {
            "const": "DEL"
          }
        }
      },
      "then": {
        "required": [
          "context",
          "action",
          "key"
        ]
      },
      "else": {
        "required": [
          "context",
          "action",
          "key",
          "value"
        ]
      },
      "additionalProperties": false
    },
    "query-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/query-modifier"
      }
    },
    "body-modifier": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "scope": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "action": {
          "type": "string",
          "enum": [
            "ADD",
            "APD",
            "SET",
            "RPL",
            "REN",
            "DEL"
          ]
        },
        "propagate": {
          "type": "boolean"
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "action": {
                "const": "DEL"
              }
            }
          },
          "then": {
            "required": [
              "context",
              "action",
              "key"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "action": {
                "enum": [
                  "ADD",
                  "APD",
                  "RPL",
                  "REN"
                ]
              }
            }
          },
          "then": {
            "required": [
              "context",
              "action",
              "key",
              "value"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "action": {
                "const": "SET"
              }
            }
          },
          "then": {
            "required": [
              "context",
              "action",
              "value"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "context": {
                "const": "REQUEST"
              }
            }
          },
          "then": {
            "properties": {
              "scope": {
                "type": "string",
                "enum": [
                  "REQUEST"
                ]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "context": {
                "const": "RESPONSE"
              }
            }
          },
          "then": {
            "properties": {
              "scope": {
                "type": "string",
                "enum": [
                  "REQUEST",
                  "RESPONSE"
                ]
              }
            }
          }
        }
      ],
      "additionalProperties": false
    },
    "body-modifier-array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/body-modifier"
      }
    }
  },
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": [
        "https://raw.githubusercontent.com/GabrielHCataldo/gopen-gateway/main/json-schema.json",
        "../../json-schema.json"
      ]
    },
    "version": {
      "type": "string"
    },
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "hot-reload": {
      "type": "boolean"
    },
    "store": {
      "$ref": "#/definitions/store"
    },
    "timeout": {
      "type": "string"
    },
    "cache": {
      "$ref": "#/definitions/cache"
    },
    "limiter": {
      "$ref": "#/definitions/limiter"
    },
    "security-cors": {
      "$ref": "#/definitions/security-cors"
    },
    "middlewares": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/backend"
      }
    },
    "endpoints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/endpoint"
      }
    }
  },
  "required": [
    "port",
    "endpoints"
  ],
  "additionalProperties": false
}